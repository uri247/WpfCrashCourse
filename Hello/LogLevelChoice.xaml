<UserControl x:Class="Hello.LogLevelChoice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hello"
             mc:Ignorable="d" 
             d:DesignHeight="49" d:DesignWidth="314">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="144"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Height="28" HorizontalAlignment="Left" Name="BaseLabel" VerticalAlignment="Center" Content="label" />
        <ComboBox Grid.Column="1" Margin="0,12,0,12" >
            <ComboBoxItem>OFF</ComboBoxItem>
            <ComboBoxItem>ERR</ComboBoxItem>
            <ComboBoxItem>WRN</ComboBoxItem>
            <ComboBoxItem>INF</ComboBoxItem>
            <ComboBoxItem>VER</ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
